    align-items stretch

  .b-flex
    @extend {blockFlex}

  .b-flexStandart
    @extend {blockFlexStandart}

  {iconSettings}
    background-position center
    -webkit-background-size contain
    background-size contain
    background-repeat no-repeat

  {iconStandart}
    @extend {iconSettings}
    display block
    width 17px
    height 17px
    position absolute
    top 50%
    left 0
    -ms-transform translateY(-50%)
