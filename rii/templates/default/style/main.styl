    font-size 30px
    color colorTextBlack
    line-height 1.6
    text-transform uppercase
    text-align center
    margin 0 auto 40px
    padding 0 0 5px
    position relative
    &:before
      content ''
      position absolute
      display block
      background-color rgba(blackBg, 0.1)
      width 49px
      height 3px
      left 50%
      bottom 0
      -ms-transform translateX(-50%)
      -webkit-transform translateX(-50%)
      transform translateX(-50%)

  {standartParagraph}
    margin 0 0 15px
    padding 0
    font-size 16px
    line-height 1.5

  {inputTextStandart}
